{
  "name": "language-learning-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/*",
    "infra/prisma"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run -w packages/core build && npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "worker": "npm run dev --workspace=apps/worker",
    "db:generate": "npm run db:generate --workspace=infra/prisma",
    "db:push": "npm run db:push --workspace=infra/prisma",
    "db:migrate": "npm run db:migrate --workspace=infra/prisma"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
